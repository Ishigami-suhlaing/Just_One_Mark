<resources>
    <style name="Text.Headline">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Widget.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/colorSurface</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.MyApp.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
</resources>
