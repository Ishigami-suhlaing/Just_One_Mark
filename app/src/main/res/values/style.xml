<resources>

    <style name="Text">
        <!-- Common text attributes can go here -->
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/nuget_bold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/nuget_regular</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">@font/nuget_regular</item>
    </style>

    <style name="Widget.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/colorSurface</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.JustOneMark.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nuget_regular</item>
    </style>

    <style name="Widget.JustOneMark.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nuget_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
